root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.hcl]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
