{
  "min_packer_version": "1.4.0",

  "variables": {
    "creator": "Flaudisio",
    "image_name": "gitlab-runner_ubuntu1804_{{ isotime \"20060102-150405-UTC\" }}.packer",
    "image_description": "GitLab Runner running on Ubuntu 18.04",

    "docker_machine_version": "0.16.2",

    "aws_region": "us-east-1",
    "aws_source_ami_id": "",
    "aws_source_ami_owners": "099720109477",
    "aws_source_ami_filter_name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
    "aws_source_ami_architecture": "x86_64",
    "aws_instance_type": "t3.micro",
    "aws_subnet_id": "",
    "aws_ssh_username": "ubuntu",
    "aws_ami_name": "{{ user `image_name` }}",
    "aws_ami_description": "{{ user `image_description` }}",

    "digitalocean_region": "nyc3",
    "digitalocean_image": "ubuntu-18-04-x64",
    "digitalocean_size": "s-1vcpu-1gb",
    "digitalocean_snapshot_name": "{{ user `image_name` }}",
    "digitalocean_ssh_username": "root"
  },

  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami": "{{ user `aws_source_ami_id` }}",
      "source_ami_filter": {
        "filters": {
          "name": "{{ user `aws_source_ami_filter_name` }}",
          "architecture": "{{ user `aws_source_ami_architecture` }}",
          "root-device-type": "ebs",
          "state": "available",
          "virtualization-type": "hvm"
        },
        "owners": ["{{ user `aws_source_ami_owners` }}"],
        "most_recent": true
      },
      "instance_type": "{{ user `aws_instance_type` }}",
      "subnet_id": "{{ user `aws_subnet_id` }}",
      "associate_public_ip_address": true,
      "ssh_username": "{{ user `aws_ssh_username` }}",
      "run_tags": {
        "Name": "Packer Builder - {{ user `aws_ami_name` }}",
        "packer/creator": "{{ user `creator` }}"
      },
      "ami_name": "{{ user `aws_ami_name` }}",
      "ami_description": "{{ user `aws_ami_description` }}",
      "tags": {
        "Name": "{{ user `aws_ami_name` }}",
        "packer/created-at": "{{ isotime \"20060102-150405\" }}",
        "packer/creator": "{{ user `creator` }}",
        "packer/packer-version": "{{ packer_version }}",
        "packer/source-ami-name": "{{ .SourceAMIName }}",
        "packer/source-ami-owners": "{{ user `aws_source_ami_owners` }}"
      }
    },
    {
      "type": "digitalocean",
      "region": "{{ user `digitalocean_region` }}",
      "image": "{{ user `digitalocean_image` }}",
      "size": "{{ user `digitalocean_size` }}",
      "snapshot_name": "{{ user `digitalocean_snapshot_name` }}",
      "ssh_username": "{{ user `digitalocean_ssh_username` }}",
      "tags": [
        "development-tools",
        "packer-created"
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../_scripts/wait-cloud-init.sh",
        "../_scripts/apt-upgrade.sh"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "playbook.yml",
      "galaxy_file": "requirements.yml",
      "galaxy_force_install": true,
      "extra_arguments": ["-v"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo curl -L -o /usr/local/bin/docker-machine https://github.com/docker/machine/releases/download/v{{ user `docker_machine_version` }}/docker-machine-$( uname -s )-$( uname -m )",
        "sudo chmod -v 755 /usr/local/bin/docker-machine"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "curl -L https://packages.gitlab.com/install/repositories/runner/gitlab-runner/script.deb.sh | sudo bash",
        "sudo apt install gitlab-runner",
        "sudo systemctl enable gitlab-runner"
      ]
    }
  ]
}
